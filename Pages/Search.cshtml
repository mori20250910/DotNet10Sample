@page
@model SearchModel
@{
    ViewData["Title"] = "品目検索";
}

<h1 class="mb-4">品目検索</h1>

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">検索条件</h5>
            </div>
            <div class="card-body">
                <form method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row g-2">
                        <div class="col-md-4 mb-3">
                            <label for="ItemCode" class="form-label">品目コード (完全一致)</label>
                            <input type="text" class="form-control" id="ItemCode" name="ItemCode" value="@Model.ItemCode" />
                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="ItemName" class="form-label">品目名 (部分一致)</label>
                            <input type="text" class="form-control" id="ItemName" name="ItemName" value="@Model.ItemName" />
                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="CategoryCode" class="form-label">品目カテゴリ</label>
                            <select id="CategoryCode" name="CategoryCode" class="form-select">
                                <option value="">-- 未選択 --</option>
                                @foreach (var c in Model.Categories)
                                {
                                    if (Model.CategoryCode == c.Code)
                                    {
                                        <option value="@c.Code" selected>@c.Code - @c.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@c.Code">@c.Code - @c.Name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">検索</button>
                        <button type="button" id="clearButton" class="btn btn-secondary">クリア</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">検索結果</h5>
            </div>
            <div class="card-body">
                @if (Model.SearchResults.Any())
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>品目コード</th>
                                <th>品目名</th>
                                <th>カテゴリ</th>
                                <th>備考</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SearchResults)
                            {
                                <tr class="table-row-clickable" data-item-id="@item.Id">
                                    <td>@item.Id</td>
                                    <td>@item.Code</td>
                                    <td>@item.Name</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.Remarks</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else if (!string.IsNullOrWhiteSpace(Model.ItemName))
                {
                    <p class="text-muted">検索結果が見つかりませんでした。</p>
                }
                else
                {
                    <p class="text-muted">検索条件を入力して検索ボタンをクリックしてください。</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.table-row-clickable').forEach(function(row) {
            row.style.cursor = 'pointer';
            row.addEventListener('dblclick', function() {
                var itemId = this.getAttribute('data-item-id');
                window.location.href = '@Url.Page("/Detail")?id=' + itemId;
            });
            row.addEventListener('mouseenter', function() {
                this.style.backgroundColor = '#f0f0f0';
            });
            row.addEventListener('mouseleave', function() {
                this.style.backgroundColor = '';
            });
        });

        // Clear button handler for search form
        (function() {
            var clearBtn = document.getElementById('clearButton');
            if (!clearBtn) return;
            clearBtn.addEventListener('click', function() {
                var code = document.getElementById('ItemCode');
                var name = document.getElementById('ItemName');
                var category = document.getElementById('CategoryCode');

                if (code) code.value = '';
                if (name) name.value = '';
                if (category) category.value = '';

                // Clear any validation messages (client-side summary)
                var summary = document.querySelector('[asp-validation-summary]');
                if (summary) summary.innerHTML = '';
            });
        })();
    </script>
}
