@page
@model IndexModel
@{
    ViewData["Title"] = "メニュー";
}

<h1 class="mb-4">メニュー</h1>

<div class="row">
    <div class="col-md-6 mb-3">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">品目登録</h5>
                <p class="card-text">新しい品目を登録します。</p>
                <a asp-page="/Register" class="btn btn-primary">品目登録</a>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-3">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">品目検索</h5>
                <p class="card-text">品目を検索して一覧表示します。</p>
                <a asp-page="/Search" class="btn btn-primary">品目検索</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-6 mb-3">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">マスタメンテ</h5>
                <p class="card-text">マスタの編集画面に移動します。</p>
                <a asp-page="/Master" class="btn btn-primary">マスタメンテ</a>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-3">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">製造計画</h5>
                <p class="card-text">製造計画を管理します。</p>
                <a asp-page="/Manufacturing" class="btn btn-primary">製造計画</a>
            </div>
        </div>
    </div>
