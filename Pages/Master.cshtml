@page
@model MasterModel
@{
    ViewData["Title"] = "マスタメンテ";
}

<h1 class="mb-4">マスタメンテ</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form method="get" class="mb-3">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <label for="selectedMaster" class="col-form-label">編集するマスタ</label>
        </div>
        <div class="col-auto">
            <select id="selectedMaster" name="SelectedMaster" class="form-select" onchange="this.form.submit()">
                <option value="">-- 選択してください --</option>
                <option value="ItemCategory">品目カテゴリ</option>
                <option value="Holiday">祝日設定</option>
            </select>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        // Set selected option via JS to avoid Razor attribute issues
        (function() {
            var sel = document.getElementById('selectedMaster');
            if (sel && '@(Model.SelectedMaster ?? "")') {
                sel.value = '@(Model.SelectedMaster ?? "")';
            }
        })();
    </script>
}

@if (Model.SelectedMaster == "ItemCategory")
{
    <div class="card mb-3">
        <div class="card-body">
            <h5>品目カテゴリマスタ</h5>

            <form method="post" asp-page-handler="AddCategory" class="row g-2 align-items-end">
                @Html.AntiForgeryToken()
                <div class="col-auto">
                    <label class="form-label">カテゴリコード</label>
                    <input asp-for="NewCategoryCode" class="form-control" maxlength="10" />
                </div>
                <div class="col-auto">
                    <label class="form-label">カテゴリ名</label>
                    <input asp-for="NewCategoryName" class="form-control" maxlength="50" />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">追加</button>
                </div>
            </form>

            <hr />

            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>コード</th>
                        <th>名前</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.Categories)
                    {
                        <tr>
                            <td>@c.Code</td>
                            <td>
                                <form method="post" asp-page-handler="EditCategory" class="d-flex gap-2">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="EditCode" value="@c.Code" />
                                    <input name="EditName" value="@c.Name" class="form-control" maxlength="50" style="max-width:360px;" />
                                    <button type="submit" class="btn btn-sm btn-primary ms-2">保存</button>
                                </form>
                            </td>
                            <td class="text-end">
                                <form method="post" asp-page-handler="DeleteCategory" class="d-inline ms-2" onsubmit="return confirm('削除してもよいですか？');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="DeleteCode" value="@c.Code" />
                                    <button type="submit" class="btn btn-sm btn-danger">削除</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@if (Model.SelectedMaster == "Holiday")
{
    <div class="card mb-3">
        <div class="card-body">
            <h5>祝日設定</h5>

            <form method="post" asp-page-handler="AddHoliday" class="row g-2 align-items-end mb-3">
                @Html.AntiForgeryToken()
                <div class="col-auto">
                    <label class="form-label">祝日を追加</label>
                    <input type="date" asp-for="NewHolidayDate" class="form-control" />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">追加</button>
                </div>
            </form>

            <hr />

            @if (Model.Holidays.Any())
            {
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>祝日</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var holiday in Model.Holidays)
                        {
                            <tr>
                                <td>@holiday.HolidayDate.ToString("yyyy年MM月dd日（ddd）")</td>
                                <td class="text-end">
                                    <form method="post" asp-page-handler="DeleteHoliday" class="d-inline" onsubmit="return confirm('削除してもよいですか？');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="DeleteHolidayId" value="@holiday.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">削除</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">祝日が設定されていません。</p>
            }
        </div>
    </div>
}

<div class="mt-3">
    <a asp-page="/Index" class="btn btn-secondary">メニューに戻る</a>
</div>